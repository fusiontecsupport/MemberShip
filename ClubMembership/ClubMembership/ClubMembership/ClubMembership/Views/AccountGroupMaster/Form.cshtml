@using ClubMembership.Models;
@model ClubMembership.Models.AccountGroupMaster
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .req {
        color: red;
        font-size: 15px;
    }
</style>

<div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i>  Account Group Master  <div class="clearfix"> </div></h3>
        </div>

        @Html.Raw(ViewBag.msg)
        <div class="row">
            <div class="col-md-12">
                <div class="panel-body">
                    <form action="@Url.Content("~/AccountGroupMaster/savedata")" method="post" accept-charset="utf-8" id="accountgroupmasterform" data-ng-controller="myController" name="accountgroupmasterform" onsubmit="return validate();">
                        @Html.ValidationSummary(true)
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.ACHEADGID, new { @class = "form-control  ACHEADGID", @id = "ACHEADGID" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Code<span class="req"> *</span> </label>
                                        @Html.TextBoxFor(model => Model.ACHEADGCODE, new { @class = "form-control ACHEADGCODE caps", @id = "ACHEADGCODE", required = "required", MaxLength = "15", tabindex = "1" })
                                        @Html.ValidationMessageFor(mode => Model.ACHEADGCODE)
                                        <input type="text" value="@Model.ACHEADGCODE" name="i_ACHEADGCODE" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description <span class="req"> *</span> </label>
                                        @Html.TextBoxFor(model => Model.ACHEADGDESC, new { @class = "form-control  ACHEADGDESC", @id = "ACHEADGDESC", required = "required", tabindex = "2" })
                                        @Html.ValidationMessageFor(mode => Model.ACHEADGDESC)
                                        <input type="text" value="@Model.ACHEADGDESC" name="i_ACHEADGDESC" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 hidden">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>CUSRID </label>
                                        @Html.TextBoxFor(model => Model.CUSRID, new { @class = "form-control CUSRID", @id = "CUSRID" })
                                        @*@Html.ValidationMessageFor(model => model.CUSRID)*@
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>LMUSRID </label>
                                        @Html.TextBoxFor(model => Model.LMUSRID, new { @class = "form-control  LMUSRID", @id = "LMUSRID" })
                                        @*@Html.ValidationMessageFor(model => model.LMUSRID)*@
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control DISPSTATUS", @id = "DISPSTATUS", tabindex = "3" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 box-footer">
                                <input type="button" name="back" value="Go Back" class="btn btn-primary btn-sm  pull-left" onclick="JavaScript:history.back()" />
                                @*<input type="submit" name="continue" value="Save & Add" class="btn btn-success btn-sm pull-right " />*@

                                <input type="submit" name="save" value="Save" class="btn btn-primary btn-sm pull-right  " />

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('.msg').delay(1200).fadeOut(1000);

        $(".ACHEADGCODE").keyup(function () {//...capitalize each

        $(this).val($(this).val().toUpperCase());
    });
        function validate() {
            if ($(".ACHEADGCODE").val() == "") {
            alert("Please Select Loan Date");
            $(".ACHEADGCODE").focus();
                return false;
            if ($(".ACHEADGDESC").val() == "") {
            alert("Please Select Loan Date");
            $(".ACHEADGDESC").focus();
            return false;
        }
    </script>

}




