<!--@* Place the main member fields here, as in ProfileMaster/Create.cshtml, but without the form tag. *@

<div class="card-body p-5">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <!-- Basic Information Section -->
    <div class="section-container" id="basicSection">
        <div class="section-header bg-light p-3 mb-4 rounded d-flex justify-content-between align-items-center flex-wrap">
            <h4 class="mb-0"><i class="fas fa-id-card mr-2 text-primary"></i> Basic Information</h4>
        </div>
        <div class="row">
            <div class="col-md-8">
                <!-- Row 1: Name and Gender -->
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="Member_Name" class="font-weight-bold">Member Name <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-user"></i>
                                </span>
                            </div>
                            @Html.TextBoxFor(m => m.Member_Name, new { @class = "form-control", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Member_Name, "", new { @class = "text-danger" })
                    </div>
                    @Html.HiddenFor(m => m.MemberNo)
                    @Html.HiddenFor(m => m.DispStatus)
                    @Html.HiddenFor(m => m.Member_Reg_Date)
                    @Html.HiddenFor(m => m.Member_Sdate)
                    @Html.HiddenFor(m => m.Member_Edate)
                    @Html.HiddenFor(m => m.Member_Photo_Path)
                    @Html.HiddenFor(m => m.ModifiedBy)
                    @Html.HiddenFor(m => m.ModifiedDateTime)
                    @Html.HiddenFor(m => m.UIserID)
                    @Html.HiddenFor(m => m.MemberDNo)
                    @Html.HiddenFor(m => m.CreatedBy)
                    <div class="col-md-6">
                        <label for="Gender" class="font-weight-bold">Gender <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-venus-mars"></i>
                                </span>
                            </div>
                            @Html.DropDownListFor(m => m.Gender,
                                new SelectList(new[]
                                {
                                    new { Value = "1", Text = "Male" },
                                    new { Value = "2", Text = "Female" }
                                }, "Value", "Text"),
                                "-- Select Gender --",
                                new { @class = "form-control", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                    </div>
                </div>
                <!-- ...continue with the rest of the ProfileMaster/Create.cshtml fields... -->
            </div>
        </div>
    </div>
    <!-- Add the rest of the ProfileMaster/Create.cshtml fields here, excluding the form tag -->
</div>
