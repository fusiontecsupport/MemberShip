@model ClubMembership.Models.GovernmentProof
@{
    ViewBag.Title = "Government Proof Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-id-card me-2"></i> Government Proof Details
                </h3>
                <div>
                    <a href="@Url.Action("Index")" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Member Name:</strong>
                        </div>
                        <div class="col-sm-8">
                            @if (Model.MemberShipMaster != null)
                            {
                                <span>@Model.MemberShipMaster.Member_Name</span>
                            }
                            else
                            {
                                <span class="text-muted">Member not found</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-sm-8">
                            @if (Model.MemberShipMaster != null)
                            {
                                <span>@Model.MemberShipMaster.Member_EmailID</span>
                            }
                            else
                            {
                                <span class="text-muted">Email not available</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>File Name:</strong>
                        </div>
                        <div class="col-sm-8">
                            <i class="fas fa-file me-2"></i>
                            @System.IO.Path.GetFileName(Model.GovPath)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Document Type:</strong>
                        </div>
                        <div class="col-sm-8">
                            @{
                                string fileExtension = "";
                                if (!string.IsNullOrEmpty(Model.GovPath))
                                {
                                    fileExtension = System.IO.Path.GetExtension(Model.GovPath).ToLower();
                                }
                                string documentType;
                                switch (fileExtension)
                                {
                                    case ".pdf":
                                        documentType = "PDF Document";
                                        break;
                                    case ".jpg":
                                    case ".jpeg":
                                        documentType = "JPEG Image";
                                        break;
                                    case ".png":
                                        documentType = "PNG Image";
                                        break;
                                    case ".gif":
                                        documentType = "GIF Image";
                                        break;
                                    default:
                                        documentType = "Document";
                                        break;
                                }
                            }
                            <span class="badge bg-info">@documentType</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Document ID:</strong>
                        </div>
                        <div class="col-sm-8">
                            <i class="fas fa-hashtag me-2"></i>
                            @Model.Id
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>File Size:</strong>
                        </div>
                        <div class="col-sm-8">
                            @{
                                string filePath = Server.MapPath(Model.GovPath);
                                string fileSize = "Unknown";
                                if (System.IO.File.Exists(filePath))
                                {
                                    var fileInfo = new System.IO.FileInfo(filePath);
                                    long bytes = fileInfo.Length;
                                    if (bytes < 1024)
                                    {
                                        fileSize = string.Format("{0} B", bytes);
                                    }
                                    else if (bytes < 1024 * 1024)
                                    {
                                        fileSize = string.Format("{0:F1} KB", (double)bytes / 1024);
                                    }
                                    else if (bytes < 1024 * 1024 * 1024)
                                    {
                                        fileSize = string.Format("{0:F1} MB", (double)bytes / (1024 * 1024));
                                    }
                                    else
                                    {
                                        fileSize = string.Format("{0:F1} GB", (double)bytes / (1024 * 1024 * 1024));
                                    }
                                }
                            }
                            <span class="text-muted">@fileSize</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>File Path:</strong>
                        </div>
                        <div class="col-sm-8">
                            <code class="text-muted">@Model.GovPath</code>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">Document Preview</h6>
                        </div>
                        <div class="card-body text-center">
                            @{
                                string fileExt = "";
                                if (!string.IsNullOrEmpty(Model.GovPath))
                                {
                                    fileExt = System.IO.Path.GetExtension(Model.GovPath).ToLower();
                                }
                                if (fileExt == ".pdf")
                                {
                                    <div class="mb-3">
                                        <i class="fas fa-file-pdf fa-4x text-danger"></i>
                                        <p class="mt-2 text-muted">PDF Document</p>
                                    </div>
                                }
                                else if (fileExt == ".jpg" || fileExt == ".jpeg" || fileExt == ".png" || fileExt == ".gif")
                                {
                                    <img src="@Url.Content(Model.GovPath)" 
                                         class="img-fluid rounded" 
                                         alt="Government Proof Document"
                                         style="max-height: 200px;" />
                                }
                                else
                                {
                                    <div class="mb-3">
                                        <i class="fas fa-file fa-4x text-muted"></i>
                                        <p class="mt-2 text-muted">Document</p>
                                    </div>
                                }
                            }
                        </div>
                    </div>

                    <div class="mt-3">
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Download", new { id = Model.Id })" 
                               class="btn btn-primary">
                                <i class="fas fa-download me-2"></i> Download Document
                            </a>
                            <a href="@Url.Action("Delete", new { id = Model.Id })" 
                               class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to delete this government proof document?')">
                                <i class="fas fa-trash me-2"></i> Delete Document
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            console.log('Government Proof Details page loaded');
        });
    </script>
}
