@model ClubMembership.Models.RenewalPopupViewModel

<style>
    .renewal-gradient { background: linear-gradient(135deg, #dc2626, #ef4444); color:#fff; }
    .renewal-header { display:flex; align-items:center; justify-content:space-between; padding:14px 16px; }
    .renewal-card { border-radius: 12px; border: 1px solid #eee; box-shadow: 0 8px 22px rgba(18,38,63,.12); }
    .renewal-body { padding: 20px; }
    .info-chip { display:inline-flex; align-items:center; gap:8px; padding:6px 10px; background:#f6f7ff; border-radius:999px; font-weight:600; }
    .btn-gradient { background: linear-gradient(135deg, #6a5ef1, #a26bfa); color:#fff; border:none; }
    .btn-gradient:hover { filter: brightness(1.05); }
    .alert-expired { background: linear-gradient(135deg, #fef2f2, #fee2e2); border: 2px solid #fca5a5; color: #dc2626; padding: 16px; border-radius: 12px; margin-bottom: 16px; }
    .plan-option { border: 2px solid #e5e7eb; border-radius: 12px; padding: 16px; margin-bottom: 12px; cursor: pointer; transition: all 0.3s ease; }
    .plan-option:hover { border-color: #6a5ef1; background: #f8f9ff; }
    .plan-option.selected { border-color: #6a5ef1; background: #f0f4ff; }
    .plan-title { font-weight: 700; font-size: 1.1rem; color: #1f2937; }
    .plan-price { font-weight: 600; color: #6a5ef1; font-size: 1.2rem; }
    .plan-duration { color: #6b7280; font-size: 0.9rem; }
</style>

<div class="modal-header renewal-gradient">
    <div class="renewal-header w-100">
        <h5 class="modal-title mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Membership Renewal Required</h5>
    </div>
</div>
<div class="modal-body renewal-body">
    <div class="alert-expired">
        <h6 class="fw-bold mb-2"><i class="fas fa-clock me-2"></i>Your Membership Has Expired</h6>
        <p class="mb-0">Please renew your subscription to continue accessing our services and content.</p>
    </div>
    
    <div class="mb-3">
        <span class="info-chip"><i class="fas fa-user"></i> @Model.MemberName (@Model.MemberNumber)</span>
    </div>
    @if (Model.CurrentRenewalDate.HasValue)
    {
        <div class="mb-4">
            <span class="info-chip text-danger"><i class="far fa-calendar-times"></i> Expired: @Model.CurrentRenewalDate.Value.ToString("dd-MMM-yyyy")</span>
        </div>
    }

    <div class="mb-4">
        <label class="form-label fw-semibold mb-3">Select Renewal Plan <span class="text-danger">*</span></label>
        
        @foreach (var plan in Model.Plans)
        {
            <div class="plan-option" data-plan-id="@plan.Value" data-plan-name="@plan.Text">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="plan-title">@plan.Text</div>
                        <div class="plan-duration">@(plan.Text.Contains("Yearly") ? "Valid for 1 Year" : "Lifetime Access")</div>
                    </div>
                    <div class="plan-price">â‚¹@(plan.Text.Contains("Yearly") ? "300" : "3000")</div>
                </div>
            </div>
        }
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-gradient btn-lg w-100" id="btnSubmitRenewal">
        <i class="fas fa-credit-card me-2"></i>Complete Renewal & Continue
    </button>
</div>

<!-- Hidden form for anti-forgery token -->
<form style="display:none;">
    @Html.AntiForgeryToken()
</form>

@* Script is initialized from Views/Home/Index.cshtml after the partial is injected *@
