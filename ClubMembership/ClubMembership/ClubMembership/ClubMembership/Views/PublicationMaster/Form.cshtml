        });

        function GetDisplayname() {
            var name = $(".PUBLNNAME").val();
            $(".PUBLNDNAME").val(name);
        }

    function validate()
    {

            if ($(".PUBLNNAME").val() == "") {
                alert("Please Enter the Publication Name");
                $(".PUBLNNAME").focus();
                return false;
        }

        if ($(".PUBLNDNAME").val() == "") {
            alert("Please Enter the Publication Display Name");
            $(".PUBLNDNAME").focus();
            return false;
        }

        if ($(".PUBLNADDR").val() == "") {
            alert("Please Enter the Publication Address");
            $(".PUBLNADDR").focus();
            return false;
        }

        if ($(".LANGID").val() == "") {
            alert("Please Select Language");
            $(".LANGID").focus();
            return false;
        }

        if ($(".PUBLNTID").val() == "") {
            alert("Please Select Publication Type");
            $(".PUBLNTID").focus();
            return false;
        }

        if ($(".STATEID").val() == "") {
            alert("Please Select State");
            $(".STATEID").focus();
            return false;
        }

        if ($(".PUBLNCODE").val() == "") {
            alert("Please Enter the Publication Code");
            $(".PUBLNCODE").focus();
            return false;
        }

        if ($(".ACHEADID").val() == "") {
            alert("Please Select the Ledger");
            $(".ACHEADID").focus();
            return false;
        }

        }//End of validation



