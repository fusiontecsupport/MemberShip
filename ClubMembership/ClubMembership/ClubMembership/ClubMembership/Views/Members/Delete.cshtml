@model ClubMembership.Models.MemberShipMaster
@{
    ViewBag.Title = "Delete Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="h4 mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete Member</h2>
        </div>

        <div class="card-body">
            <h3 class="text-danger mb-4">Are you sure you want to delete this member?</h3>

            <div class="member-details p-4 mb-4 border rounded bg-light">
                <h4 class="text-primary mb-3">@Model.Member_Name</h4>
            </div>

            @using (Html.BeginForm(null, "Members"))
            {
                @Html.AntiForgeryToken()

                <div class="form-actions d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                    </button>

                    @Html.ActionLink("Cancel", "Index", "Members", null, new
                    {
                        @class = "btn btn-outline-secondary px-4"
                    })
                </div>
            }
        </div>
    </div>
</div>

<style>
    .member-details {
        background-color: #f8f9fa;
        border-left: 4px solid #dc3545;
    }

    .detail-item {
        padding: 8px 0;
        border-bottom: 1px solid #eee;
    }

    .btn-danger {
        min-width: 150px;
    }
</style>

@section Scripts {
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}