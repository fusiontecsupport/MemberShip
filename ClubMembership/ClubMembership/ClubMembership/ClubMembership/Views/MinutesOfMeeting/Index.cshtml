@model IEnumerable<ClubMembership.Models.MinutesOfMeeting>

@{
    ViewBag.Title = "Minutes of Meeting";
}

<div class="container-fluid mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Minutes of Meeting</h2>
        <a class="btn btn-primary" href="@Url.Action("Form")"><i class="fa fa-plus"></i> New Meeting</a>
    </div>

    <form class="card mb-3 p-3" method="get" action="@Url.Action("Index")">
        <div class="row g-2">
            <div class="col-md-4">
                <label class="form-label">Search</label>
                <input type="text" name="q" value="@Request["q"]" class="form-control" placeholder="Heading, caption, place..." />
            </div>
            <div class="col-md-3">
                <label class="form-label">From</label>
                <input type="date" name="from" value="@Request["from"]" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">To</label>
                <input type="date" name="to" value="@Request["to"]" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Place</label>
                <input type="text" name="place" value="@Request["place"]" class="form-control" placeholder="Place" />
            </div>
        </div>
        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-success"><i class="fa fa-search"></i> Filter</button>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Clear</a>
        </div>
    </form>

    <div class="table-responsive">
        @if (ViewBag.MomTotal != null)
        {
            <div class="alert alert-info" style="padding:8px 12px;">Server returned @ViewBag.MomTotal minutes (sample: @ViewBag.MomSample)</div>
        }
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:28%">Heading</th>
                    <th style="width:28%">Caption</th>
                    <th style="width:20%">Meeting Date & Time</th>
                    <th style="width:14%">Place</th>
                    <th style="width:10%" class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">No meetings found.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold">@item.Heading</div>
                                <div class="small text-muted">@item.ConductedBy @((!string.IsNullOrWhiteSpace(item.OrganizedBy) ? " | " + item.OrganizedBy : ""))</div>
                            </td>
                            <td>@item.Caption</td>
                            <td>@(item.MeetingDateAndTime.HasValue ? item.MeetingDateAndTime.Value.ToString("dd/MM/yyyy HH:mm") : "")</td>
                            <td>@item.MeetingPlace</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Edit", new { id = item.MomId })" title="Edit"><i class="fa fa-pencil"></i></a>
                                <a class="btn btn-sm btn-outline-danger" href="@Url.Action("Delete", new { id = item.MomId })" onclick="return confirm('Delete this record?');" title="Delete"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


