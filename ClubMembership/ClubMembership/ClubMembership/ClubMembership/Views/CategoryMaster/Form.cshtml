@using ClubMembership.Models;
@model ClubMembership.Models.CategoryMaster
@{
    ViewBag.Title = "Category Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .req { color: #dc3545; font-size: 14px; }
    .panel.panel-primary { box-shadow: 0 10px 30px rgba(16,24,40,0.06); border-radius: 16px; overflow: hidden; border: 0; background:#fff; }
    .panel.panel-primary > .panel-heading { background: linear-gradient(135deg, #007aff 0%, #0056b3 100%); color: #fff; }
    .panel-title { display:flex; align-items:center; justify-content:space-between; margin:0; }
    .panel-body { background: #fff; }
    .form-group label { font-weight: 600; }
    .help-text { font-size: 12px; color: #6c757d; margin-top: 4px; }
    .box-footer { padding-top: 10px; border-top: 1px solid #eef2f7; margin-top: 10px; }
    .btn + .btn { margin-left: 6px; }
    .ios-input { border-radius: 12px; height: 38px; padding: 6px 12px; border: 1px solid #e5e7eb; box-shadow: inset 0 1px 2px rgba(0,0,0,0.02); }
    .ios-btn-primary { background:#0a84ff; color:#fff; border:0; padding:8px 14px; border-radius:12px; font-weight:600; box-shadow: 0 6px 16px rgba(10,132,255,0.35); }
    .ios-btn-primary:hover { background:#0a74e8; color:#fff; }
    .ios-btn-secondary { background:#e5e7eb; color:#111827; border:0; padding:8px 14px; border-radius:12px; font-weight:600; }
    .ios-form-card { background:#ffffff; border:1px solid #eef2f7; border-radius:16px; padding:16px; box-shadow: 0 6px 24px rgba(16,24,40,0.06); }
    .ios-field { margin-bottom: 14px; }
    .ios-inline-help { display:flex; align-items:center; gap:6px; color:#6c757d; font-size:12px; }
    .ios-divider { height:1px; background:#eef2f7; margin: 6px 0 14px; }
    @@media (max-width: 768px) { .panel-title span { font-size: 16px; } }
</style>
<div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">
                <span><i class="fa fa-tags"></i> @ViewBag.Title</span>
                <a href="javascript:history.back();" class="btn ios-btn-secondary"><i class="fa fa-arrow-left"></i> Back</a>
            </h3>
        </div>

        @Html.Raw(ViewBag.msg)
        <div class="row">
            <div class="col-md-12">
                <div class="panel-body">
                    <div class="ios-form-card">
                    <form action="@Url.Action("SaveData","CategoryMaster")" method="post" accept-charset="utf-8" id="categorytypeform" name="categorytypeform">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.ACID, new { @class = "form-control  ACID", @id = "ACID" })
                                    </div>
                                </div>
                            </div>
                            @if (!string.IsNullOrWhiteSpace(Model.ACCODE))
                            {
                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Code</label>
                                            @Html.TextBoxFor(model => Model.ACCODE, new { @class = "form-control ios-input ACCODE", @id = "ACCODE", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <div class="form-group ios-field">
                                        <label>Description <span class="req"> *</span> </label>
                                        @Html.TextBoxFor(model => Model.ACDESC, new { @class = "form-control ios-input ACDESC", @id = "ACDESC", required = "required", placeholder = "Short description (e.g., Household, Electronics)" })
                                        @Html.ValidationMessageFor(model => model.ACDESC)
                                        <input type="text" value="@Model.ACDESC" name="i_ACDESC" hidden>
                                        <div class="ios-inline-help"><i class="fa fa-info-circle"></i> Provide a concise, user-friendly label.</div>
                                    </div>
                                </div>
                            </div>
                            @* Hide extra fields entirely *@
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <div class="form-group ios-field">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control ios-input DISPSTATUS", @id = "DISPSTATUS" })
                                        <div class="ios-inline-help"><i class="fa fa-eye"></i> Set visibility as Active or Inactive.</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 ios-divider"></div>
                            <div class="col-md-12 box-footer">
                                <input type="button" name="back" value="Go Back" class="btn ios-btn-secondary pull-left" onclick="JavaScript:history.back()" />
                                <input type="submit" name="save" value="Save" class="btn ios-btn-primary pull-right" />
                            </div>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('.msg').delay(1200).fadeOut(1000);

        $(".POSTNDESC").keyup(function () {//...capitalize each

            $(this).val($(this).val().toUpperCase());
        });

    </script>

}


