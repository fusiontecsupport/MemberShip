@using ClubMembership.Data;
@model ClubMembership.Models.Company
@{
    ViewBag.Title = "NForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="h5 mb-0">
                    <i class="fas fa-building me-2"></i> Company Master
                </h3>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="card-body">
            @Html.Raw(ViewBag.msg)
            <form action="@Url.Content("~/CompanyMaster/nsavedata")" method="post" accept-charset="utf-8" id="companymasterform" data-ng-controller="myController" name="companymasterform">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <!-- Hidden Primary ID -->
                @Html.TextBoxFor(model => Model.masterdata[0].COMPID, new { @class = "form-control COMPID", @id = "COMPID", @hidden = "true" })

                <!-- Main Company Information -->
                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-signature me-1"></i> Name
                        </label>
                        @Html.TextBoxFor(model => Model.masterdata[0].COMPNAME, new { @class = "form-control COMPNAME", @id = "COMPNAME" })
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-tag me-1"></i> Display Name
                        </label>
                        @Html.TextBoxFor(model => Model.masterdata[0].COMPDNAME, new { @class = "form-control COMPDNAME", @id = "COMPDNAME" })
                    </div>

                    <div class="col-12 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-map-marker-alt me-1"></i> Address
                        </label>
                        @Html.TextAreaFor(model => Model.masterdata[0].COMPADDR, new { @class = "form-control COMPADDR", @id = "COMPADDR", @rows = "3" })
                    </div>

                    <!-- Contact Information -->
                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-phone me-1"></i> Landline
                        </label>
                        @Html.TextBoxFor(model => Model.masterdata[0].COMPPHN1, new { @class = "form-control COMPPHN1", @id = "COMPPHN1" })
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-phone-alt me-1"></i> Landline 1
                        </label>
                        @Html.TextBoxFor(model => Model.masterdata[0].COMPPHN2, new { @class = "form-control COMPPHN2", @id = "COMPPHN2" })
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-mobile-alt me-1"></i> Mobile
                        </label>
                        @Html.TextBoxFor(model => Model.masterdata[0].COMPPHN3, new { @class = "form-control COMPPHN3", @id = "COMPPHN3" })
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-mobile me-1"></i> Mobile 1
                        </label>
                        @Html.TextBoxFor(model => Model.masterdata[0].COMPPHN4, new { @class = "form-control COMPPHN4", @id = "COMPPHN4" })
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-envelope me-1"></i> Mail
                        </label>
                        @Html.TextBoxFor(model => Model.masterdata[0].COMPMAIL, new { @class = "form-control COMPMAIL", @id = "COMPMAIL" })
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-user-tie me-1"></i> Contact Person
                        </label>
                        @Html.TextBoxFor(model => Model.masterdata[0].COMPCPRSN, new { @class = "form-control COMPCPRSN", @id = "COMPCPRSN" })
                    </div>
                </div>

                <!-- Tax and Legal Information -->
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-id-card me-1"></i> PAN No
                        </label>
                        @Html.TextBoxFor(model => Model.masterdata[0].COMPPANNO, new { @class = "form-control COMPPANNO", @id = "COMPPANNO" })
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-file-invoice me-1"></i> Registation No
                        </label>
                        @Html.TextBoxFor(model => Model.masterdata[0].COMPTANNO, new { @class = "form-control COMPTANNO", @id = "COMPTANNO" })
                    </div>

                    <div class="col-md-1 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-code me-1"></i> Code
                        </label>
                        @Html.TextBoxFor(model => Model.masterdata[0].COMPCODE, new { @class = "form-control COMPCODE", @id = "COMPCODE" })
                    </div>

                    <div class="col-md-2 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-toggle-on me-1"></i> Status
                        </label>
                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-select" })
                    </div>
                </div>

                <!-- Hidden Fields -->
                @Html.TextBoxFor(model => Model.masterdata[0].CUSRID, new { @class = "form-control CUSRID", @id = "CUSRID", @hidden = "true" })
                @Html.TextBoxFor(model => Model.masterdata[0].LMUSRID, new { @class = "form-control LMUSRID readonly", @id = "LMUSRID", @hidden = "true" })

                <!-- PO Company Details Section -->
                <div class="card mb-4" id="job_list">
                    <div class="card-header bg-secondary text-white">
                        <i class="fas fa-list me-2"></i> PO Company Details
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <input type="text" id="TDETAIL_IDX" value="0" name="TDETAIL_IDX[]" class="TDETAIL_IDX" style="display:none" />

                            <table class="table table-striped table-bordered" id="TDETAIL">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="fas fa-building me-1"></i> PO Company Name</th>
                                        <th><i class="fas fa-map-marker-alt me-1"></i> PO Company Address</th>
                                        <th>
                                            <button type="button" class="btn btn-sm btn-success" id="add_detail">
                                                <i class="fas fa-plus me-1"></i> Add New
                                            </button>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="TDETAIL_BODY" id="TDETAIL_BODY"></tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Form Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <button type="button" class="btn btn-outline-primary" onclick="JavaScript:history.back()">
                        <i class="fas fa-arrow-left me-1"></i> Go Back
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            // Display Name auto-fill
            $("#COMPNAME").blur(function () {
                var COMPNAME = $('#COMPNAME').val();
                $('#COMPDNAME').val(COMPNAME);
            });

            // Disable submit if TMPCOMPYID is 11
            var ses_var = $(".TMPCOMPYID").val();
            if (ses_var == "11") {
                $("form input:submit").attr("disabled", true);
            }

            // Prevent Enter key from submitting form in text fields
            function stopRKey(evt) {
                var evt = (evt) ? evt : ((event) ? event : null);
                var node = (evt.target) ? evt.target : ((evt.srcElement) ? evt.srcElement : null);
                if ((evt.keyCode == 13) && (node.type == "text")) { return false; }
            }
            document.onkeypress = stopRKey;

            // Ctrl+I to add new row
            $(document).on("keyup", function (e) {
                if (e.ctrlKey && e.which === 73) {
                    $("#add_detail").click();
                }
                e.preventDefault();
            });

            // Initialize row count
            var rowcount = $('#TDETAIL tbody tr').length;
            $("#TDETAIL_IDX").val(rowcount);

            // Add new row functionality
            $("#add_detail").click(function () {
                if ($("#TDETAIL_IDX").val() != 0) {
                    var $tableBody = $('#TDETAIL').find("tbody"),
                        $trLast = $tableBody.find("tr:last"),
                        $trNew = $trLast.clone();

                    $trLast.after($trNew);
                    $trNew.find('#COMPDID').val(0);
                    $trNew.find("#COMPPONAME").val("");
                    $trNew.find("#COMPPOADDR").val("");

                    var row_idx = parseInt($("#TDETAIL_IDX").val());
                    $("#TDETAIL_IDX").val(row_idx + 1);
                    $("#TDETAIL_BODY").show();
                } else {
                    $('#TDETAIL_IDX').val("1");
                    $("#TDETAIL_BODY").show();
                }
            });

            // Delete row functionality
            $(document).on("click", "#del_detail", function () {
                var r = confirm("Are you sure to delete this record?");
                if (r == true) {
                    var idx = $("#TDETAIL_IDX").val();
                    if (idx == 1) {
                        $("#TDETAIL_BODY").hide();
                        var $tableBody = $('#TDETAIL').find("tbody");
                        $trCur = $tableBody.find("tr:eq(0)");
                        $("#COMPPONAME").val("");
                        $("#COMPPOADDR").val("");
                        $("#TDETAIL_IDX").val(0);
                    } else {
                        $("#TDETAIL_BODY").show();
                        $(this).parents('.item-row').remove();
                        $("#TDETAIL_IDX").val($("#TDETAIL_IDX").val() - 1);
                    }
                }
            });

            // Form validation
            window.validate = function () {
                temp2 = $("#COMPNAME").val();
                if (temp2.trim() == "") { alert("Please Enter the Company Name"); $("#COMPNAME").focus(); return false; }

                temp3 = $("#COMPDNAME").val();
                if (temp3.trim() == "") { alert("Please Enter the Company Display Name"); $("#COMPDNAME").focus(); return false; }

                temp4 = $("#COMPCODE").val();
                if (temp4.trim() == "") { alert("Please Enter the Company Code"); $("#COMPCODE").focus(); return false; }

                var bad = 0;
                $('#TDETAIL :text').each(function () {
                    switch (this.id) {
                        default:
                            if ($.trim(this.value) == "" && $.trim(this.value) == 0) bad++;
                    }
                });

                if (bad < 1) return true;
                else {
                    alert("Please Enter PO Company Details before save");
                    return false;
                }
            }
        });
    </script>
}