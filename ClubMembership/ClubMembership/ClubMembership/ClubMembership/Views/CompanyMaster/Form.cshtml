@using ClubMembership.Models;
@model ClubMembership.Models.CompanyMaster
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="h5 mb-0">
                    <i class="fas fa-building me-2"></i>Company Master
                </h3>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="card-body">
            @Html.Raw(ViewBag.msg)
            <form action="@Url.Content("~/CompanyMaster/savedata")" method="post" accept-charset="utf-8" id="companymasterform" data-ng-controller="myController" name="companymasterform">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="row mb-4">
                    @Html.TextBoxFor(model => Model.COMPID, new { @class = "form-control COMPID", @id = "COMPID", @hidden = "true" })

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-signature me-1"></i> Name
                        </label>
                        @Html.TextBoxFor(model => Model.COMPNAME, new { @class = "form-control COMPNAME", @id = "COMPNAME" })
                        <input type="text" value="@Model.COMPNAME" name="i_COMPNAME" hidden />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-tag me-1"></i> Display Name
                        </label>
                        @Html.TextBoxFor(model => Model.COMPDNAME, new { @class = "form-control COMPDNAME", @id = "COMPDNAME" })
                    </div>

                    <div class="col-12 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-map-marker-alt me-1"></i> Address
                        </label>
                        @Html.TextAreaFor(model => Model.COMPADDR, new { @class = "form-control COMPADDR", @id = "COMPADDR", @rows = "3" })
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-phone me-1"></i> Landline
                        </label>
                        @Html.TextBoxFor(model => Model.COMPPHN1, new { @class = "form-control COMPPHN1", @id = "COMPPHN1" })
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-phone-alt me-1"></i> Landline 1
                        </label>
                        @Html.TextBoxFor(model => Model.COMPPHN2, new { @class = "form-control COMPPHN2", @id = "COMPPHN2" })
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-mobile-alt me-1"></i> Mobile
                        </label>
                        @Html.TextBoxFor(model => Model.COMPPHN3, new { @class = "form-control COMPPHN3", @id = "COMPPHN3" })
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-mobile me-1"></i> Mobile 1
                        </label>
                        @Html.TextBoxFor(model => Model.COMPPHN4, new { @class = "form-control COMPPHN4", @id = "COMPPHN4" })
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-envelope me-1"></i> Mail
                        </label>
                        @Html.TextBoxFor(model => Model.COMPMAIL, new { @class = "form-control COMPMAIL", @id = "COMPMAIL" })
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-user-tie me-1"></i> Contact Person
                        </label>
                        @Html.TextBoxFor(model => Model.COMPCPRSN, new { @class = "form-control COMPCPRSN", @id = "COMPCPRSN" })
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-receipt me-1"></i> GST No
                        </label>
                        @Html.TextBoxFor(model => Model.COMPGSTNO, new { @class = "form-control COMPGSTNO", @id = "COMPGSTNO" })
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-id-card me-1"></i> PAN No
                        </label>
                        @Html.TextBoxFor(model => Model.COMPPANNO, new { @class = "form-control COMPPANNO", @id = "COMPPANNO" })
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-file-invoice me-1"></i> TAN No
                        </label>
                        @Html.TextBoxFor(model => Model.COMPTANNO, new { @class = "form-control COMPTANNO", @id = "COMPTANNO" })
                    </div>

                    <div class="col-md-1 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-code me-1"></i> Code
                        </label>
                        @Html.TextBoxFor(model => Model.COMPCODE, new { @class = "form-control COMPCODE", @id = "COMPCODE" })
                        <input type="text" value="@Model.COMPCODE" name="i_COMPCODE" hidden />
                    </div>

                    <div class="col-md-2 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-toggle-on me-1"></i> Status
                        </label>
                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-select" })
                    </div>

                    @Html.TextBoxFor(model => Model.CUSRID, new { @class = "form-control CUSRID", @id = "CUSRID", @hidden = "true" })
                    @Html.TextBoxFor(model => Model.LMUSRID, new { @class = "form-control LMUSRID readonly", @id = "LMUSRID", @hidden = "true" })
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="button" class="btn btn-outline-primary" onclick="JavaScript:history.back()">
                        <i class="fas fa-arrow-left me-1"></i> Go Back
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $("#COMPNAME").blur(function () {
                var COMPNAME = $('#COMPNAME').val();
                $('#COMPDNAME').val(COMPNAME);
            });
        })
    </script>
}

<style>
    .card {
        border-radius: 0.5rem;
    }

    .card-header {
        padding: 1rem 1.5rem;
    }

    .form-label {
        margin-bottom: 0.5rem;
    }

    .btn {
        min-width: 120px;
    }
</style>