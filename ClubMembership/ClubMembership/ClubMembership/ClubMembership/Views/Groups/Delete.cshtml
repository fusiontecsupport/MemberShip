@model ClubMembership.Models.Group
@{
    ViewBag.Title = "Delete Group";
}

<div class="container">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">
                <i class="bi bi-exclamation-triangle me-2"></i>Delete Group
            </h3>
        </div>

        <div class="card-body">
            <h4 class="text-danger mb-4">Are you sure you want to delete this group?</h4>

            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>
                </div>
            </div>

            @using (Html.BeginForm("Delete", "Groups", FormMethod.Post, new { id = "deleteForm" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <div class="form-actions no-color">
                    <button type="button" id="deleteButton" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Delete
                    </button>
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const btn = document.getElementById("deleteButton");
            if (btn) {
                btn.addEventListener("click", function () {
                    Swal.fire({
                        title: 'Delete Confirmation',
                        text: "This will permanently delete the group!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                        confirmButtonText: 'Delete'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            document.getElementById('deleteForm').submit();
                        }
                    });
                });
            }
        });
    </script>

    <style>
        .card {
            border-radius: 8px;
            max-width: 600px;
            margin: 2rem auto;
        }

        .card-header {
            padding: 1rem 1.5rem;
        }

        .card-body {
            padding: 2rem;
        }

        .btn {
            min-width: 120px;
        }
    </style>
}