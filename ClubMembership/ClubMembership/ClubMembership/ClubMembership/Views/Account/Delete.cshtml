@model ClubMembership.Models.AccountViewModels.EditUserViewModel
@{
    ViewBag.Title = "Delete User";
}

<div class="container">
    <div class="card shadow" style="max-width: 800px; margin: 2rem auto;">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h2 class="h4 mb-0">
                <i class="fas fa-user-slash me-2"></i>Delete User
            </h2>
        </div>

        <div class="card-body">
            <!-- Warning Section -->
            <div class="alert alert-danger mb-4">
                <h4 class="alert-heading">
                    <i class="fas fa-exclamation-triangle me-2"></i>Warning
                </h4>
                <p class="mb-0">Are you sure you want to delete this user? This action cannot be undone.</p>
            </div>

            <!-- Header Section -->
            <div class="mb-4">
                <h3 class="h5 text-danger">User Details</h3>
                <p class="text-muted">Review user details before deletion</p>
            </div>

            <!-- User Details -->
            <div class="row mb-4">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold d-block mb-2">Username</label>
                    <div class="form-control-plaintext">
                        @Html.DisplayFor(model => model.UserName)
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold d-block mb-2">Email</label>
                    <div class="form-control-plaintext">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold d-block mb-2">First Name</label>
                    <div class="form-control-plaintext">
                        @Html.DisplayFor(model => model.FirstName)
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold d-block mb-2">Last Name</label>
                    <div class="form-control-plaintext">
                        @Html.DisplayFor(model => model.LastName)
                    </div>
                </div>
            </div>

            <!-- Delete Form -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <!-- Buttons -->
                <div class="d-flex gap-3 mt-4">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 8px;
    }

    .card-header {
        padding: 1rem 1.5rem;
    }

    .card-body {
        padding: 1.5rem 2rem;
    }

    .form-control-plaintext {
        padding: 0.5rem 0.75rem;
        background-color: #f8f9fa;
        border-radius: 4px;
    }

    .btn {
        min-width: 160px;
    }

    .alert-danger {
        border-left: 4px solid #dc3545;
    }
</style>