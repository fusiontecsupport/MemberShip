    <div class="row">
        <div class="col-12">
            <h4 class="section-title"><i class="fas fa-credit-card me-2"></i> My Payment History</h4>

            @if (paymentDetails != null && paymentDetails.Any())
            {
                <div class="row">
                    @foreach (var payment in paymentDetails)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="payment-card">
                                <div class="payment-header d-flex justify-content-between align-items-center">
                                    <span>@payment.Payment_Date.ToString("dd MMM yyyy")</span>
                                    <span>@payment.Payment_Receipt_No</span>
                                </div>
                                <div class="payment-body">
                                    <span class="payment-status @(payment.Payment_Status == "Completed" ? "status-completed" : "status-pending")">
                                        @payment.Payment_Status
                                    </span>

                                    <div class="payment-amount">₹@payment.Amount.ToString("N2")</div>

                                    <span class="payment-method">@payment.Payment_Type</span>

                                    <div class="payment-details mt-3">
                                        <div class="payment-detail">
                                            <span class="payment-detail-label">Plan:</span>
                                            <span>@payment.Payment_Plan</span>
                                        </div>
                                        <div class="payment-detail">
                                            <span class="payment-detail-label">Renewal Date:</span>
                                            <span>@payment.Renewal_Date.ToString("dd MMM yyyy")</span>
                                        </div>
                                        <div class="payment-detail">
                                            <span class="payment-detail-label">Reference:</span>
                                            <span>@payment.RRN_NO</span>
                                        </div>
                                    </div>

                                    <div class="payment-actions d-flex justify-content-end">
                                        <button class="btn btn-sm btn-outline-primary me-2" title="View Receipt" onclick="viewReceipt('@payment.Payment_Receipt_No')">
                                            <i class="fas fa-receipt me-1"></i> View
                                        </button>
                                        <button class="btn btn-sm btn-outline-secondary" title="Download" onclick="downloadReceipt('@payment.Payment_Receipt_No')">
                                            <i class="fas fa-download me-1"></i> Download
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
