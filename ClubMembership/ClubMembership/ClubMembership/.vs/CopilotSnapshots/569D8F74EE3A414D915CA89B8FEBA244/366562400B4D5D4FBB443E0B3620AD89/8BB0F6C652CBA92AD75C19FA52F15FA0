@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Chart.js for dashboard
        var ctx = document.getElementById('dashboardChart').getContext('2d');
        var dashboardChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Total Members', 'Removed (15 days)', 'Total Amount'],
                datasets: [{
                    label: 'Dashboard Stats',
                    data: [@totalMembers, @removedMembers, @totalAmount],
                    backgroundColor: [
                        'rgba(67, 97, 238, 0.7)',
                        'rgba(247, 37, 133, 0.7)',
                        'rgba(76, 201, 240, 0.7)'
                    ],
                    borderColor: [
                        'rgba(67, 97, 238, 1)',
                        'rgba(247, 37, 133, 1)',
                        'rgba(76, 201, 240, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
        function viewReceipt(receiptNo) {
            alert('View receipt: ' + receiptNo);
        }
        function downloadReceipt(receiptNo) {
            alert('Download receipt: ' + receiptNo);
        }
    </script>
}