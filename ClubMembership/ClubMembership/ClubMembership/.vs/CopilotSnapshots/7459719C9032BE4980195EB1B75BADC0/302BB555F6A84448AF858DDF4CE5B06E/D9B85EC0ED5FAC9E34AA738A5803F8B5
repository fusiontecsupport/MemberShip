using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.ComponentModel.DataAnnotations;
using System.ComponentModel.DataAnnotations.Schema;
using System.Linq;
using System.Web;
using System.Web.Mvc;

namespace ClubMembership.Models
{
    [Table("MemberShip_FDetails")]
    public class MemberShipFamilyDetail
    {
        [Key]
        [DatabaseGenerated(DatabaseGeneratedOption.Identity)]
        public int MemberFID { get; set; }

        [Required]
        public int MemberID { get; set; }

        [Required]
        [StringLength(100)]
        public string Child_Name { get; set; }

        [Required]
        public DateTime Child_DOB { get; set; }

        [Required]
        [StringLength(15)]
        public string Child_Age { get; set; }

        [Required]
        public int Child_Gender { get; set; } // 1=Male, 2=Female (or your defined values)

        [Required]
        public int Child_Current_Position { get; set; } // Should map to your position types

        [Required]
        public int Child_MaritalStatus { get; set; } // Should map to your marital status types

        [StringLength(100)]
        public string ModifiedBy { get; set; }

        public DateTime? ModifiedDateTime { get; set; }

        // Navigation property to parent member
        [ForeignKey("MemberID")]
        public virtual MemberShipMaster Member { get; set; }

        public virtual ICollection<MemberShipFamilyDetail> Children { get; set; } = new List<MemberShipFamilyDetail>();
    }
}